-- 加载怪物脚本（可重复加载）
local function loadMonsterScript()
    local originalText = monsterButton.Text

    monsterButton.Text = "LOADING..."
    monsterButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)  -- 橙色

    local success, errorMsg = pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/MCBfun/roblox/refs/heads/main/KILLaura%20"))()
    end)

    if success then
        monsterButton.Text = "✓ LOADED"
        monsterButton.BackgroundColor3 = Color3.fromRGB(60, 200, 100)  -- 绿色

        if isMinimized then
            statusLabel.Text = "MCB加载器"
        end

        task.wait(1.5)
        monsterButton.Text = "MONSTER"
        monsterButton.BackgroundColor3 = Color3.fromRGB(220, 60, 80)
    else
        monsterButton.Text = "✗ ERROR"
        monsterButton.BackgroundColor3 = Color3.fromRGB(200, 80, 80)  -- 暗红色

        warn("[MCB] 怪物脚本加载失败: " .. tostring(errorMsg))

        task.wait(1.5)
        monsterButton.Text = "MONSTER"
        monsterButton.BackgroundColor3 = Color3.fromRGB(220, 60, 80)
    end
end

