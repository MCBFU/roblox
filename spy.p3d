local function searchActions(searchText)
    if searchText == "" or not searchText then
        updateDisplay(allActions)
        return
    end
    
    local searchLower = searchText:lower()
    local filteredActions = {}
    
    for _, action in ipairs(allActions) do
        if action.name:lower():find(searchLower) or 
           action.id:find(searchText) or
           action.path:lower():find(searchLower) then
            table.insert(filteredActions, action)
        end
    end
    
    updateDisplay(filteredActions)
end

