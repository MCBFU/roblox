local allActions = {}

-- æŸ¥æ‰¾æ‰€æœ‰åŠ¨ä½œ
local function findAllActions()
    local actions = {}
    local count = 0
    
    -- æ‰«ææ¸¸æˆä¸­çš„æ‰€æœ‰Animationå¯¹è±¡
    for _, obj in pairs(game:GetDescendants()) do
        if obj:IsA("Animation") then
            local animationId = tostring(obj.AnimationId)
            local id = string.match(animationId, "%d+")
            
            if id and animationId:find("rbxassetid://") then
                count = count + 1
                table.insert(actions, {
                    id = id,
                    fullId = animationId,
                    name = obj.Name or "æœªå‘½ååŠ¨ç”»",
                    path = obj:GetFullName(),
                    type = "Animation"
                })
            end
        elseif obj:IsA("AnimationController") then
            for _, anim in pairs(obj:GetDescendants()) do
                if anim:IsA("Animation") then
                    local animationId = tostring(anim.AnimationId)
                    local id = string.match(animationId, "%d+")
                    
                    if id and animationId:find("rbxassetid://") then
                        count = count + 1
                        table.insert(actions, {
                            id = id,
                            fullId = animationId,
                            name = anim.Name or obj.Name .. "çš„åŠ¨ç”»",
                            path = anim:GetFullName(),
                            type = "AnimationController"
                        })
                    end
                end
            end
        elseif obj:IsA("Tool") then
            for _, anim in pairs(obj:GetDescendants()) do
                if anim:IsA("Animation") then
                    local animationId = tostring(anim.AnimationId)
                    local id = string.match(animationId, "%d+")
                    
                    if id and animationId:find("rbxassetid://") then
                        count = count + 1
                        table.insert(actions, {
                            id = id,
                            fullId = animationId,
                            name = anim.Name or obj.Name .. "çš„åŠ¨ç”»",
                            path = anim:GetFullName(),
                            type = "Tool Animation"
                        })
                    end
                end
            end
        end
    end
    
    -- å»é‡ï¼ˆæŒ‰IDï¼‰
    local uniqueActions = {}
    local seenIds = {}
    
    for _, action in ipairs(actions) do
        if not seenIds[action.id] then
            seenIds[action.id] = true
            table.insert(uniqueActions, action)
        end
    end
    
    -- æŒ‰åç§°æ’åº
    table.sort(uniqueActions, function(a, b)
        return a.name:lower() < b.name:lower()
    end)
    
    return uniqueActions
end

