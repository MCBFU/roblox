local function stopAllAnimations()
    if not player.Character then
        statusLabel.Text = "âŒ æœªæ‰¾åˆ°è§’è‰²"
        task.wait(1.5)
        statusLabel.Text = string.format("æ‰¾åˆ° %d ä¸ªåŠ¨ä½œ", #allActions)
        return
    end

    local closedCount = 0
    -- éå†è§’è‰²æ‰€æœ‰Humanoidå’ŒAnimatorï¼Œåœæ­¢å…¨éƒ¨æ’­æ”¾åŠ¨ç”»
    for _, humanoid in pairs(player.Character:GetDescendants()) do
        if humanoid:IsA("Humanoid") then
            local animator = humanoid:FindFirstChildOfClass("Animator")
            if animator then
                for _, track in pairs(animator:GetPlayingAnimationTracks()) do
                    track:Stop()
                    closedCount += 1
                end
            end
        end
    end

    -- çŠ¶æ€æ åé¦ˆæç¤º
    statusLabel.Text = closedCount > 0 and string.format("âœ… å…³é—­äº† %d ä¸ªåŠ¨ä½œ", closedCount) or "â„¹ï¸ æ— æ’­æ”¾åŠ¨ä½œ"
    task.wait(1.5)
    statusLabel.Text = string.format("æ‰¾åˆ° %d ä¸ªåŠ¨ä½œ", #allActions)
end
