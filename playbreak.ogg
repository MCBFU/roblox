-- 进度条动画
local progress = 0
local function smoothProgress()
    local startTime = tick()
    while progress < 100 do
        local elapsed = tick() - startTime
        progress = math.clamp((elapsed / 3) * 100, 0, 100) -- 3秒完成加载进度
        -- 超丝滑的进度条动画
        TweenService:Create(progressBar,TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out),{Size = UDim2.new(progress / 100, 0, 1, -2)}):Play()
        -- 进度文本
        progressText.Text = string.format("%d", math.floor(progress))
        RunService.RenderStepped:Wait()
    end
end

-- 启动进度条
task.spawn(smoothProgress)
-- 等待完成
repeat task.wait(0.1) until progress >= 100
