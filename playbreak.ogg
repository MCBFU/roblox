-- 单个图片替换逻辑（精准匹配 避免误改）
local function replaceSingleImage(obj,item)
    local targetId = "rbxassetid://"..item.oldId
    if obj.Image == targetId then
        obj.Image = "rbxassetid://"..item.newId
    end
end

-- 单个音效替换逻辑（支持空值 不报错）
local function replaceSingleSound(obj,item)
    local targetId = "rbxassetid://"..item.old
    if obj.SoundId == targetId then
        obj.SoundId = item.new == "" and "" or "rbxassetid://"..item.new
    end
end

-- 批量替换+实时监控总逻辑
local function replaceAll()
    -- 批量替换现有资源 并行执行 不卡顿
    task.spawn(function()
        for _,item in ipairs(replacementLists.Images) do
            if item.oldId ~= "" and item.newId ~= "" then
                for _,obj in pairs(game:GetDescendants()) do
                    if obj:IsA("ImageLabel") or obj:IsA("ImageButton") or obj:IsA("Decal") or obj:IsA("Texture") then
                        replaceSingleImage(obj,item)
                    end
                end
            end
        end
    end)

    -- 音效批量替换 单独线程 互不干扰
    task.spawn(function()
        for _,item in ipairs(replacementLists.Sounds) do
            if item.old ~= "" then
                for _,obj in pairs(game:GetDescendants()) do
                    if obj:IsA("Sound") then
                        replaceSingleSound(obj,item)
                    end
                end
            end
        end
    end)

    -- 实时监控新创建的资源 无延迟替换
    game.DescendantAdded:Connect(function(obj)
        task.spawn(function()
            if obj:IsA("ImageLabel") or obj:IsA("ImageButton") or obj:IsA("Decal") or obj:IsA("Texture") then
                for _,item in ipairs(replacementLists.Images) do
                    if item.oldId ~= "" and item.newId ~= "" then
                        replaceSingleImage(obj,item)
                    end
                end
            elseif obj:IsA("Sound") then
                for _,item in ipairs(replacementLists.Sounds) do
                    if item.old ~= "" then
                        replaceSingleSound(obj,item)
                    end
                end
            end
        end)
    end)
end

